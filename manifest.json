{
  "manifest_version": 3,
  "name": "iTalki Fixer",
  "version": "1.0.0",
  "description": "Automatically hides unwanted elements on iTalki",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.italki.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": "logo.png"
  }
}
